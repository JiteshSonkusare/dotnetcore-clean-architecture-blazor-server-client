@page "/User"
@using MudBlazorClient.Shared.Components
@using ViewModel = Client.Infrastructure.ViewModels;

<PageTitle>Weather forecast</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Weather forecast</MudText>
<MudText Class="mb-8">This component demonstrates fetching data from the server.</MudText>
@if (!_loaded)
{
	<MudProgressCircular Color="Color.Default" Indeterminate="true" />
}
else
{
	<MudTable Items="_userList" Hover="true" Dense="true" Elevation="0" Filter="new Func<ViewModel.User, bool>(Search)" @bind-category="_user">
		<ToolBarContent>
			<div class="justify-center mud-text-align-center">
				<MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface">Create</MudButton>
			</div>
			<MudSpacer />
			<MudTextField @bind-Value="_searchString" Immediate="true" Placeholder="Search for User" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0 mb-3"></MudTextField>
		</ToolBarContent>
		<HeaderContent>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.FirstName)">First Name</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.LastName)">Last Name</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.UserId)">User Id</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.Mobile)">Mobile</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.Address)">Address</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.Gender)">Gender</MudTableSortLabel></MudTh>
			<MudTh><MudTableSortLabel SortBy="new Func<ViewModel.User, object>(x => x.Status)">Status</MudTableSortLabel></MudTh>
			<MudTh Style="text-align:right">Actions</MudTh>
		</HeaderContent>
		<RowTemplate>
			<MudTd DataLabel="FirstName">
				<MudHighlighter Text="@context.FirstName" HighlightedText="@_searchString" />
			</MudTd>
			<MudTd DataLabel="LastName">
				<MudHighlighter Text="@context.LastName" HighlightedText="@_searchString" />
			</MudTd>
			<MudTd DataLabel="UserId">
				<MudHighlighter Text="@context.UserId" HighlightedText="@_searchString" />
			</MudTd>
			<MudTd DataLabel="Mobile">
				<MudHighlighter Text="@context.Mobile.ToString()" />
			</MudTd>
			<MudTd DataLabel="Address">
				<MudHighlighter Text="@context.Address" />
			</MudTd>
			<MudTd DataLabel="Gender">
				<MudHighlighter Text="@context.Gender" />
			</MudTd>
			<MudTd DataLabel="Status">
				<MudHighlighter Text="@context.Status" />
			</MudTd>
			<MudTd DataLabel="Actions" Style="text-align: right">
				<MudMenu Label="Actions" Variant="Variant.Filled" DisableElevation="true" EndIcon="@Icons.Filled.KeyboardArrowDown" IconColor="Color.Secondary" Direction="Direction.Left" OffsetX="true">
					<MudMenuItem>Edit</MudMenuItem>
					<MudMenuItem>Delete</MudMenuItem>
				</MudMenu>
			</MudTd>
		</RowTemplate>
		<PagerContent>
			<TablePager />
		</PagerContent>
	</MudTable>
}